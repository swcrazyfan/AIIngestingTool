<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest ExtensionBundleId="com.aiingest.videotool" 
                   ExtensionBundleVersion="1.0.0" 
                   Version="7.0" 
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    
    <ExtensionList>
        <Extension Id="com.aiingest.videotool.panel" Version="1.0.0"/>
    </ExtensionList>
    
    <ExecutionEnvironment>
        <HostList>
            <!-- Premiere Pro 2020 and later, including 2025 -->
            <Host Name="PPRO" Version="14.0"/>
        </HostList>
        <LocaleList>
            <Locale Code="All"/>
        </LocaleList>
        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="12.0"/>
        </RequiredRuntimeList>
    </ExecutionEnvironment>
    
    <DispatchInfoList>
        <Extension Id="com.aiingest.videotool.panel">
            <DispatchInfo>
                <Resources>
                    <MainPath>./index.html</MainPath>
                    <ScriptPath>./jsx/main.jsx</ScriptPath>
                    <CEFCommandLine>
                        <Parameter>--allow-file-access-from-files</Parameter>
                        <Parameter>--disable-web-security</Parameter>
                        <Parameter>--allow-running-insecure-content</Parameter>
                    </CEFCommandLine>
                </Resources>
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <Menu>AI Video Ingest Tool</Menu>
                    <Geometry>
                        <Size>
                            <Height>700</Height>
                            <Width>420</Width>
                        </Size>
                        <MinSize>
                            <Height>500</Height>
                            <Width>350</Width>
                        </MinSize>
                        <MaxSize>
                            <Height>1200</Height>
                            <Width>600</Width>
                        </MaxSize>
                    </Geometry>
                    <Icons/>
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>